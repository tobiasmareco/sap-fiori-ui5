<mvc:View
	controllerName="invoices.sapui5.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
>
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>appTitle}">
					<content>
						<Panel headerText="{i18n>helloPanel}"
							class="sapUiResponsiveMargin" width="auto"
							>
							<content>
								<Button
									text="{i18n>sayHelloButton}"
									press=".onSayHelloButton"
									class="sapUiSmallMarginEnd"
								/>
								<Input
									value="{/recipient/name}"
									width="60%"
									valueLiveUpdate="true"
								/>
								<Text text="Hello {/recipient/name}" class="sapUiSmallMargin"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>